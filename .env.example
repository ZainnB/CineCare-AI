# App Configuration
NEXT_PUBLIC_APP_NAME="CineCare AI"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# API Configuration
NEXT_PUBLIC_API_URL="http://localhost:8000"
NEXT_PUBLIC_WS_URL="ws://localhost:8000"

# Database (for future backend integration)
DATABASE_URL="postgresql://cinecare_user:your_password@localhost:5432/cinecare_db"

# Authentication (for future integration)
NEXTAUTH_SECRET="your-super-secret-key-here-change-this-in-production"
NEXTAUTH_URL="http://localhost:3000"
JWT_SECRET="another-secret-key-for-jwt-tokens"

# AI Integration
GEMINI_API_KEY="your-gemini-api-key-here"
OPENAI_API_KEY="your-openai-api-key-here"

# External Services
REDIS_URL="redis://localhost:6379"
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# File Storage
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE="10485760"  # 10MB in bytes

# Security
CORS_ORIGINS="http://localhost:3000,https://yourdomain.com"
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="900000"  # 15 minutes in milliseconds

# Monitoring & Analytics
SENTRY_DSN="your-sentry-dsn-here"
GOOGLE_ANALYTICS_ID="your-ga-id-here"

# Development
NODE_ENV="development"
DEBUG="true"
LOG_LEVEL="debug"
